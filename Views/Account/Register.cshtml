@model ASP.NET_Core_MVC_App_PhoneBook.AuthApp.UserRegistration

@{
    ViewData["Title"] = "Registration";
}

<div class="container">
    <div class="row">
        <div class="col-md-6 col-md-offset-3 well">
            <h3 class="text-center">Register</h3>

            <form asp-action="Register" asp-antiforgery="true" class="form">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="col-xs-12">
                    <div class="form-group">
                        <input asp-for="LoginProp" class="form-control" placeholder="User name" />
                    </div>
                </div>

                <div class="col-xs-12">
                    <div class="form-group">
                        <input asp-for="Email" class="form-control" placeholder="Email" />
                    </div>
                </div>

                <div class="col-xs-12">
                    <div class="form-group">
                        <input asp-for="Password" class="form-control" placeholder="Password" />
                    </div>
                </div>

                <div class="col-xs-12">
                    <div class="form-group">
                        <input asp-for="PasswordConfirm" class="form-control" placeholder="Confirm password" />
                    </div>
                </div>

                <div class="text-center col-xs-12">
                    <button type="submit" class="btn btn-default">Register</button>
                </div>
            </form>

        </div>
    </div>
</div>
